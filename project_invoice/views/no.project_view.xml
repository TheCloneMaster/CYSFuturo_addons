<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_project_task_form_material" model="ir.ui.view">
        <field name="name">project.task.form.material</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="material_used" string="Material" groups="project.group_project_user">
                    <field name="material_ids" groups="project.group_project_user">
                        <tree string="Material used" editable="top">
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <record id="edit_project_consume_material" model="ir.ui.view">
        <field name="name">project.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="///group[@name='misc']" position="before">
                <group string="Locations to consume" name="materials" groups="stock.group_stock_multi_locations">
                    <field name="location_source_id"/>
                    <field name="location_dest_id"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
