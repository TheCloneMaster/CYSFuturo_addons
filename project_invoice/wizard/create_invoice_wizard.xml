<openerp>
    <data>
        <!-- create.invoice.wizard -->
        <!-- action -->
        <record id="action_project_invoice_wizard" model="ir.actions.act_window">
            <field name="name">Facturar Proyectos</field>
            <field name="res_model">create.invoice.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <!-- menu -->
        <menuitem id="menu_project_invoice_wizard"
            parent="account.menu_finance_entries"
            name="Facturar Proyectos"
            action="action_project_invoice_wizard"
            groups="account.group_account_manager"
            sequence="20"/>
        <!-- view -->
        <record id="view_project_invoice_wizard_form" model="ir.ui.view">
            <field name="name">view.project.invoice.wizard.form</field>
            <field name="model">create.invoice.wizard</field>
            <field name="type">form</field>
            <field name="priority" eval="16"/>
            <field name="arch" type="xml">
                <form string="Invoice Projects Wizard">
                    <group>
                        <field name="date"/>
                    </group>
                    <footer>
                        <button name="do_invoicing" type="object" string="Execute" class="oe_highlight"/> or
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
     </data>
</openerp>
