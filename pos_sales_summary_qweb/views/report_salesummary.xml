<data>
<template id="report_salesummary">
    <t t-call="report.html_container">
    <t t-call="report.internal_layout">
        <div class="page">

            <div class="text-center">
                <h2>CIERRE DE VENTAS</h2>

                <strong><t t-esc="date_start" t-options="{'widget': 'datetime'}"/> - <t t-esc="date_stop" t-options="{'widget': 'datetime'}"/></strong>
            </div>

            <t t-if="show_details">
                <h3>Ventas POS</h3>
                <table class="table table-condensed">
                    <thead>
                        <th><strong>Fecha</strong></th>
                        <th><strong>No.Factura</strong></th>
                        <th><strong>Cliente</strong></th>
                        <th class="text-right"><strong>Subtotal</strong></th>
                        <th class="text-right"><strong>I.V.</strong></th>
                        <th class="text-right"><strong>Total</strong></th>
                        <th><strong>Estado</strong></th>
                    </thead>
                    <tbody>
                        <tr t-foreach="orders" t-as="line_ids">
                            <td>
                                <span t-esc="line_ids['date_order']" t-options="{'widget': 'datetime'}"/>
                            </td>
                            <td>
                                <span t-esc="line_ids['pos_name']"/>
                                <!--t t-foreach="line_ids['lines']" t-as="order_line">
                                    <br/><span t-esc="order_line.product_id.name"/><t t-if="order_line.note"> - <span t-esc="order_line.note"/> </t>
                                </t-->
                            </td>
                            <td>
                                <span t-esc="line_ids['customer_name']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="line_ids['subtotal']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="line_ids['tax']"/>
                            </td>
                            <td class="text-right">
                                <span t-esc="line_ids['total']"/>
                            </td>
                            <td>
                                <span t-esc="line_ids['state']"/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>TOTAL VENTAS POS</strong>
                            </td>
                            <td>
                            </td>
                            <td class="text-right">
                                <strong t-esc="subtotal"/>
                            </td>
                            <td class="text-right">
                                <strong t-esc="tax"/>
                            </td>
                            <td class="text-right">
                                <strong t-esc="total_paid"/>
                            </td>
                            <td>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </t>

